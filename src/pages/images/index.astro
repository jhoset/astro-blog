---
import MainLayout from "../../layouts/MainLayout.astro";
import {Image, Picture} from "astro:assets";

import post05Img from "@images/post-05.png";
---

<MainLayout title="Images">
    <h1 class="text-5xl"> Images </h1>

    <h1>Optimized image Format JPG</h1>
    <Image quality="low" format="jpg"  src={post05Img} width="150" height="150" alt="Post-05"/>

    <h1>Picture with many options</h1>
    <!--formats={['webp', 'avif', 'jpg']}-->
    <!--widths={[240, 540, 720, post05Img.width]}-->
    <!--sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`}-->
    <Picture quality="low"
             width={post05Img.width / 2}
             densities={[1.5, 2]}
             src={post05Img}
             alt="Post-05"/>

    <h1>Quality Low</h1>
    <Image quality="low"  src={post05Img} width="150" height="150" alt="Post-05"/>
    <h1>Quality Mid</h1>
    <Image quality="mid"  src={post05Img} width="150" height="150" alt="Post-05"/>
    <h1>Quality High</h1>
    <Image quality="high"  src={post05Img} width="150" height="150" alt="Post-05"/>
    <h1>Quality Max</h1>
    <Image quality="max"  src={post05Img} width="150" height="150" alt="Post-05"/>

    <div style={{ height: '1000px'}}>
    </div>

    <img  loading="lazy"
          src="/assets/images/post-05.png"
          width="200" height="200">

</MainLayout>